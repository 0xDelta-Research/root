---
import '../styles/global.css';
import Header from '../components/Header.jsx';
import Footer from '../components/Footer.jsx';
import { Lock, ArrowLeft } from 'lucide-react';
---

<html lang="en">
  <head>
    <title>404 // ACCESS DENIED</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/delta-favicon.png" />
  </head>
  
  <body class="min-h-screen bg-neutral-950 text-neutral-400 font-mono flex flex-col">
    
    <Header client:load />

    <main class="flex-grow flex items-center justify-center p-4">
        <div class="max-w-xl w-full border border-neutral-800 bg-neutral-900/20 p-12 text-center">
            
            <div class="flex justify-center mb-8">
                <div class="p-4 border border-neutral-800 bg-neutral-950">
                    <Lock className="w-12 h-12 text-white" />
                </div>
            </div>
            
            <h1 class="text-6xl font-bold text-white mb-4 tracking-tighter">404</h1>
            <h2 class="text-sm text-neutral-500 font-bold tracking-[0.3em] uppercase mb-8 border-b border-neutral-800 pb-8">
                Resource_Not_Located
            </h2>

            <p class="text-sm text-neutral-400 mb-8 leading-relaxed">
                The requested data packet could not be retrieved from the mainframe. The file may have been expunged, redacted, or moved to a higher security clearance level.
            </p>

            <a href="/" class="inline-flex items-center gap-2 bg-white text-black px-6 py-3 font-bold uppercase tracking-widest text-xs hover:bg-neutral-300 transition-colors">
                <ArrowLeft className="w-4 h-4" /> Return to Base
            </a>
        </div>
    </main>

    <Footer client:visible />
  </body>
</html>