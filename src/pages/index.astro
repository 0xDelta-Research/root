---
import '../styles/global.css';
import { getCollection } from 'astro:content';
import Header from '../components/Header.jsx';
import LatestResearch from '../components/LatestResearch.jsx'; 
import Footer from '../components/Footer.jsx';
import TeamProfiles from '../components/TeamProfiles.jsx';
import { Shield, ArrowRight, Cpu, Activity } from 'lucide-react';

// Obtendo dados
const allPosts = await getCollection('blog');
const rawTeamMembers = await getCollection('team');

// Ordenação Manual da Equipe
const teamOrder = [
  "0x_OLYMPUS",
  "SPECIEUNKN0WN_",
  "VAMPIR3BLUES",
  "SERROS404", 
  "ANKHCORP"
];
const teamMembers = rawTeamMembers.sort((a, b) => {
  const indexA = teamOrder.indexOf(a.data.name);
  const indexB = teamOrder.indexOf(b.data.name);
  return (indexA === -1 ? 99 : indexA) - (indexB === -1 ? 99 : indexB);
});

// Posts Recentes
const latestPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<html lang="pt-br">
  <head>
    <title>0xD3lta Research</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/delta-favicon.png" />
  </head>
  
  <body class="min-h-screen bg-[#050505] text-neutral-400 font-mono relative overflow-x-hidden">
    
    <Header client:load />
    
    <main class="relative z-10">
      
      {/* 1. SEÇÃO HERO */}
      <section class="relative pt-24 pb-32 border-b border-white/5 overflow-hidden">
        
        <div class="absolute top-0 right-0 w-1/2 h-full bg-white/5 blur-[150px] rounded-full pointer-events-none opacity-20"></div>

        <div class="container mx-auto px-4 grid grid-cols-1 lg:grid-cols-12 gap-12 items-center">
            
            {/* Texto (7 colunas) */}
            <div class="relative z-10 lg:col-span-7">
                
                {/* BADGE COM LED VERDE AQUI */}
                <div class="inline-flex items-center gap-3 px-3 py-1.5 rounded-sm border border-white/10 bg-white/5 text-[10px] font-bold text-neutral-500 mb-8">
                    <span class="relative flex h-2 w-2">
                      <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-500 opacity-75"></span>
                      <span class="relative inline-flex rounded-full h-2 w-2 bg-green-600"></span>
                    </span>
                    OPERATIONAL_STATUS: ACTIVE
                </div>

                <h1 class="text-5xl md:text-7xl font-bold text-neutral-200 mb-8 leading-[0.9] tracking-tighter">
                    &gt; WHOAMI
                </h1>

                <div class="text-lg text-neutral-500 mb-10 max-w-2xl leading-relaxed border-l border-white/10 pl-6 space-y-4 text-justify">
                    <p>
                        Forged by offensive and defensive practitioners, <span class="text-neutral-300 font-bold">0xD3lta Research</span> focuses on the real mechanics of modern intrusions. We work in the environments where attacks unfold for real.
                    </p>
                    <p>
                        By blending offensive insight with defensive precision, we convert adversary tradecraft into reliable, <span class="text-neutral-300 font-bold">high-impact protection</span>.
                    </p>
                    <p class="text-neutral-400 font-mono text-sm pt-2 italic opacity-60 text-left">
                        "If you're looking for marketing-safe security, we're not it."
                    </p>
                </div>

                <div class="flex flex-wrap gap-4">
                    <a href="/blog" class="group relative px-8 py-4 bg-neutral-200 text-black font-bold uppercase tracking-widest text-sm hover:bg-white transition-all flex items-center gap-2 rounded-sm">
                        Access Intel Archive <ArrowRight className="w-4 h-4" />
                    </a>

                    <a href="#team" class="group px-8 py-4 border border-neutral-700 text-neutral-500 font-bold uppercase tracking-widest text-sm hover:border-neutral-400 hover:text-neutral-300 transition-all flex items-center gap-2 rounded-sm">
                        <Shield className="w-4 h-4" /> Meet Operators
                    </a>
                </div>

                <div class="mt-16 flex items-center gap-8 text-[10px] text-neutral-700 font-mono">
                    <div class="flex items-center gap-2">
                        <Cpu className="w-3 h-3" />
                        <span>KERNEL: 5.16.3-HARDENED</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <Activity className="w-3 h-3" />
                        <span>ENCRYPTION: AES-256-GCM</span>
                    </div>
                </div>
            </div>

            {/* Terminal (5 colunas) */}
            <div class="relative hidden lg:block lg:col-span-5">
                <div class="w-full bg-[#0a0a0a] border border-white/10 rounded-sm shadow-2xl overflow-hidden">
                    <div class="bg-white/5 border-b border-white/5 p-3 flex items-center gap-2">
                        <div class="flex gap-1.5 opacity-50">
                            <div class="w-2.5 h-2.5 rounded-full bg-neutral-600"></div>
                            <div class="w-2.5 h-2.5 rounded-full bg-neutral-600"></div>
                            <div class="w-2.5 h-2.5 rounded-full bg-neutral-600"></div>
                        </div>
                        <div class="text-[10px] text-neutral-600 font-mono ml-2">root@0xd3lta:~</div>
                    </div>
                    
                    <div class="p-6 font-mono text-sm space-y-3 h-[320px] text-neutral-400">
                        <div class="flex gap-2">
                            <span class="text-neutral-300">root@0xd3lta:~$</span>
                            <span class="text-neutral-500 typing-effect">./init_protocols.sh</span>
                        </div>
                        <div class="text-neutral-600 mt-2">
                            [+] Loading modules... <br/>
                            [+] Establishing secure connection... <br/>
                            [+] Decrypting intel archives...
                        </div>
                        
                        <div class="text-blue-500/80 mt-4">
                            > Blue Team Module: <span class="text-neutral-300">ACTIVE</span><br/>
                            > Threat Hunting: <span class="text-neutral-300">READY</span>
                        </div>
                        <div class="text-red-500/80 mt-2">
                            > Red Team Module: <span class="text-neutral-300">ACTIVE</span><br/>
                            > Exploit Chain: <span class="text-neutral-300">LOADED</span>
                        </div>
                        
                        <div class="mt-4 border-t border-dashed border-white/10 pt-2">
                            <span class="text-neutral-300">root@0xd3lta:~$</span>
                            <span class="animate-pulse">_</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
      </section>
     
      {/* 2. LATEST INTELLIGENCE */}
      <section class="py-20 border-b border-white/5">
        <div class="container mx-auto px-4">
            <div class="flex flex-col md:flex-row justify-between items-end mb-12">
                <div>
                    <h2 class="text-3xl font-bold text-neutral-200 mb-2">Latest Intelligence</h2>
                    <p class="text-sm text-neutral-600 font-bold tracking-widest uppercase">[ DECLASSIFIED_REPORTS ]</p>
                </div>
                <a href="/blog" class="hidden md:block text-xs font-bold text-neutral-600 hover:text-neutral-300 transition-colors">
                    VIEW COMPLETE DATABASE -&gt;
                </a>
            </div>
            
            {latestPosts.length > 0 ? (
               <LatestResearch client:visible posts={latestPosts} variant="stealth" />
            ) : (
               <div class="border border-dashed border-neutral-800 p-10 text-center text-neutral-600">
                  // SYSTEM_MESSAGE: No reports found yet.
               </div>
            )}

            <div class="mt-8 text-center md:hidden">
                <a href="/blog" class="text-xs font-bold text-neutral-600 hover:text-neutral-300 border-b border-neutral-800 pb-1">
                    VIEW COMPLETE DATABASE -&gt;
                </a>
            </div>
        </div>
      </section>

     {/* 4. TEAM */}
      <section id="team" class="py-24 bg-[#050505]">
        {/* MUDANÇA AQUI: max-w-[1800px] para dar espaço aos 5 cards */}
        <div class="mx-auto px-6 max-w-[1800px]">
            <div class="mb-16 text-center">
                <h2 class="text-3xl font-bold text-neutral-200 mb-2">Core Operators</h2>
                <p class="text-sm text-neutral-600 font-bold tracking-widest uppercase">[ UNIT_MEMBERS ]</p>
            </div>
            
            <TeamProfiles client:visible members={teamMembers} />
        </div>
      </section>

    </main>

    <Footer client:visible />
  </body>
</html>